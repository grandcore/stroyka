{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
    "template": "node_modules/better-docs",
        "destination": "docs"
  },

  "tags": {
    "allowUnknownTags": true
  },
  "plugins": ["node_modules/better-docs/component"]
}
